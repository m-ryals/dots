[module/menu]
type=custom/menu
expand-right = true

label-open = 
label-close = ${self.label-open}
label-separator = |
menu-0-0 =  
menu-0-0-exec = shutdown -P now
menu-0-1 = 
menu-0-1-exec = mlock
menu-0-2 = 
menu-0-2-exec = scrot
menu-0-3 = 
menu-0-3-exec = rowifi
menu-0-4 =  
menu-0-4-exec = spotify >1&
menu-0-5 = 
menu-0-5-exec = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
menu-0-6 = |
menu-0-6-exec = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
menu-0-7 = 
menu-0-7-exec = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

[module/vpn]
type = custom/script
format = <label>
label = VPN:%output%
exec = chkvpn
intreval = 0.5
click-left = exec pkill openvpn
click-right = exec openvpn --config ~/.ovpn/*.ovpn --auth-user-pass ~/.ovpn/auth.txt
;format-underline = #6891C9

[module/spotify]
type = custom/script
format = <label>
label = %output%
exec = spotify.sh
